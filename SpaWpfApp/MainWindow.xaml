<Window x:Class="SpaWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpaWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="125*"/>
            <ColumnDefinition Width="271*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Button x:Name="openFileButton" Content="Open file" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75"/>
            <RichTextBox x:Name="procedureRichTextBox" HorizontalAlignment="Left" Height="374" Margin="10,35,0,0" VerticalAlignment="Top" Width="228">
                <RichTextBox.Resources>
                    <Style TargetType="{x:Type Paragraph}">
                        <Setter Property="Margin" Value="0"/>
                    </Style>
                </RichTextBox.Resources>
                <FlowDocument>
                    <Paragraph>
                        <Run Text="procedure Main {"/>
                    </Paragraph>
                    <Paragraph>
                        <Run Text="  x = x+y+z;"/>
                    </Paragraph>
                    <Paragraph>
                        <Run Text="  while i {"/>
                    </Paragraph>
                    <Paragraph>
                        <Run Text="    y = x+i*2;"/>
                    </Paragraph>
                    <Paragraph>
                        <Run Text="  }"/>
                    </Paragraph>
                    <Paragraph>
                        <Run Text="}"/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
            <Button x:Name="parseButton" Content="Parse" HorizontalAlignment="Left" Margin="163,10,0,0" VerticalAlignment="Top" Width="75" Click="parseButton_Click"/>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="550*"></RowDefinition>
                <RowDefinition Height="250*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="185*"></RowDefinition>
                        <RowDefinition Height="65*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <RichTextBox Grid.Row="0" x:Name="rtbPql" Margin="5"></RichTextBox>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="450*"></ColumnDefinition>
                            <ColumnDefinition Width="100*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                    <Button Margin="5" Content="Parse" Grid.Column="1" Click="parsePqlBtn_Click"></Button>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>

    </Grid>
</Window>
